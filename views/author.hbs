<a href="author/new" class="btn btn-primary btn-lg active addAuthButton" role="button">Add Author</a>
{{#each author}}
  <div class='row authorProfile'>
    <div class='col-xs-2'>
      <img class ='profPic' src= "{{this.prof_pic}}" alt="#"/>
    </div>
    <div class='col-xs-10'>
      <h4>{{this.name}}</h4>
      {{this.bio}}
    </div>
  </div>
  <a href='delete/{{author.id}}'>Delete</a>
{{/each}}
