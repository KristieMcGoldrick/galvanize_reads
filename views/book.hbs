
<a href="book/new" class="btn btn-primary btn-lg active addAuthButton" role="button">Add Book</a>
<section>
  <h2>Books</h2>
  <ul>
    {{#each book}}
    <div class= 'row bookDetail'>
      <div class='col-xs-4'>
        <img  class= 'bookImg' src= "{{this.cover}}" alt="#"/>
      </div>
      <div class='col-xs-8'>
        <liclass='bookTitle'>
          <h3>Title: {{this.title}}</h3>
          <p>{{this.topic}}</p>
            <p>{{this.description}}</p>
            <a href='book/delete/{{id}}'>Delete
            </a>
        </li>
      </div>
    </div>
    {{/each}}
  </ul>
</section>
